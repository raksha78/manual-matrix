pipelines:
  - name: S_Matrix_0033
    steps:           
      - name: S_Matrix_0033
        type: Matrix
        stepMode: Bash
        stepletMultipliers:
         exclude:
            - environmentVariables:
               delay: 1
               fail: 'true'
          environmentVariables:
            - delay: 1
              fail: 'false'
            - delay: 2
              fail: 'false'
        execution:
          onStart:
            - sleep "$delay"
          onExecute:
            - echo "I am on matrix step"
            - |
              [ $fail == 'false' ] 
            - ls -l .          
